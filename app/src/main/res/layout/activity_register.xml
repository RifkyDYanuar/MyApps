<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".RegisterActivity">

			<FrameLayout android:id="@+id/page_register_frame_ek1"
				android:layout_marginTop="0dp"
				android:layout_marginStart="0dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/bg_purple"
				>
				<TextView android:id="@+id/register_ek1"
					android:fontFamily="sans-serif"
					android:textSize="20sp"
					android:textStyle="bold"
					android:textColor="@color/login_color"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="60dp"
					android:layout_width="106dp"
					android:layout_height="38dp"
					android:text="@string/register_ek1_string"
					/>
				<ImageView android:id="@+id/image_2"
					android:src="@drawable/image_2"
					android:contentDescription="image_2"
					android:layout_marginTop="113dp"
					android:layout_gravity="center_horizontal"
					android:layout_width="wrap_content"
					android:layout_height="147dp" />



				<FrameLayout
					android:id="@+id/rectangle_5"
					android:background="@drawable/rectangle_5_shape"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="291dp"
					android:layout_width="wrap_content"
					android:layout_height="400dp">


					<EditText
						android:id="@+id/nama"
						android:layout_width="280dp"
						android:drawableLeft="@drawable/user"
						android:layout_height="wrap_content"
						android:hint="Masukan Nama Lengkap"
						android:textColorHint="#800080"
						android:layout_gravity="center_vertical"
						android:layout_marginBottom="150dp"
						android:layout_marginStart="10dp"
						android:layout_marginEnd="10dp"
						android:singleLine="true"
						android:ellipsize="end"
						android:inputType="textAutoComplete"/>

					<EditText
						android:id="@+id/email"
						android:layout_width="280dp"
						android:drawableLeft="@drawable/email"
						android:layout_height="wrap_content"
						android:hint="Masukan Email Anda"
						android:textColorHint="#800080"
						android:layout_gravity="center_vertical"
						android:layout_marginBottom="90dp"
						android:layout_marginStart="10dp"
						android:layout_marginEnd="10dp"
						android:singleLine="true"
						android:ellipsize="end"
						android:inputType="textAutoComplete"/>
					<EditText
						android:id="@+id/username"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Masukkan Username"
						android:textColorHint="#800080"
						android:drawableLeft="@drawable/user"
						android:layout_gravity="center_vertical"
						android:layout_marginBottom="30dp"
						android:layout_marginEnd="10dp"
						android:layout_marginStart="10dp"
						android:inputType="text"
						android:singleLine="true"
						android:ellipsize="end"/>

					<EditText
						android:id="@+id/password"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_marginStart="10dp"
						android:layout_marginTop="30dp"
						android:layout_marginEnd="10dp"
						android:ellipsize="end"
						android:drawableLeft="@drawable/lock"
						android:hint="Enter Your Password"
						android:inputType="textPassword"
						android:singleLine="true"
						android:textColorHint="#800080" />

					<EditText
						android:id="@+id/telepon"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_marginStart="10dp"
						android:layout_marginTop="90dp"
						android:layout_marginEnd="10dp"
						android:ellipsize="end"
						android:drawableLeft="@drawable/call"
						android:hint="Masukan Nomor telepon"
						android:inputType="number"
						android:singleLine="true"
						android:textColorHint="#800080" />

					<Button  android:id="@+id/btnRegister"
						style="?attr/materialButtonOutlinedStyle"
						app:strokeColor="#930096"
						android:layout_gravity="center_horizontal"
						android:layout_marginTop="340dp"
						android:layout_marginEnd="10dp"
						android:layout_marginStart="10dp"
						android:layout_width="match_parent"
						android:layout_height="40dp"
						android:text="Register"/>

				</FrameLayout>




			</FrameLayout>

</FrameLayout>