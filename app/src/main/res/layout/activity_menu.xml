<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#800080"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:layout_marginVertical="80dp"
        android:text="Selamat datang di MyApps"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="120dp"
        android:src="@drawable/menu"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:text="LOGIN"
        >
    </Button>

    <Button
        android:id="@+id/register"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginHorizontal="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:textColor="#800080"
        android:layout_marginTop="50dp"
        app:strokeColor="#800080"
        android:text="Register">

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="180dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/penilaian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/bachelor"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penilaian Mahasiswa"
                    android:fontFamily="@font/poppins_bold"
                    android:textAlignment="center"
                    android:layout_marginTop="75dp"
                    android:textSize="10sp"
                    android:layout_marginHorizontal="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                 android:layout_weight="1"
                android:layout_marginStart="20dp">
                <Button
                    android:id="@+id/Gajih"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/budgeting"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perhitungan Gajih"
                    android:fontFamily="@font/poppins_bold"
                    android:textAlignment="center"
                    android:layout_marginTop="75dp"
                    android:layout_marginHorizontal="15dp"
                    android:textSize="10sp"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Mahasiswa"
            android:id="@+id/btnMahasiswa"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Â©Copyright|MyApps 2024"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        tools:ignore="RtlCompat">


    </TextView>





</FrameLayout>